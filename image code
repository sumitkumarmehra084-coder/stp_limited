  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const products = [
      {name:"Agarbatti Pack", price:99, img:"https://via.placeholder.com/120?text=Agarbatti"},
      {name:"Diya Set", price:249, img:"https://via.placeholder.com/120?text=Diya+Set"},
      {name:"Ghee", price:349, img:"https://via.placeholder.com/120?text=Ghee"},
      {name:"Kumkum & Haldi", price:79, img:"https://via.placeholder.com/120?text=Kumkum+Haldi"},
      {name:"Puja Thali", price:399, img:"https://via.placeholder.com/120?text=Puja+Thali"},
      {name:"Bell (Ghanti)", price:299, img:"https://via.placeholder.com/120?text=Bell"},
      {name:"Incense Cone", price:129, img:"https://via.placeholder.com/120?text=Incense+Cone"},
      {name:"Kalash", price:499, img:"https://via.placeholder.com/120?text=Kalash"},
      {name:"Camphor (Kapoor)", price:149, img:"https://via.placeholder.com/120?text=Camphor"},
      {name:"Puja Mala", price:199, img:"https://via.placeholder.com/120?text=Puja+Mala"},
      {name:"Chandan Powder", price:199, img:"https://via.placeholder.com/120?text=Chandan+Powder"},
      {name:"Shankh", price:349, img:"https://via.placeholder.com/120?text=Shankh"},
      {name:"Puja Cloth", price:149, img:"https://via.placeholder.com/120?text=Puja+Cloth"},
      {name:"Panchpatra", price:199, img:"https://via.placeholder.com/120?text=Panchpatra"}
    ];

    const productList = document.getElementById('productList');
    const cartItems = document.getElementById('cartItems');
    const cartTotal = document.getElementById('cartTotal');
    const placeOrderBtn = document.getElementById('placeOrderBtn');
    let cart = [];

    // Load products
    products.forEach((p,i)=>{
      const card = document.createElement('div');
      card.className="card";
      card.innerHTML = `
        <img src="${p.img}" alt="${p.name}" />
        <h3>${p.name}</h3>
        <p>₹${p.price}</p>
        <button class="cta" onclick="addToCart(${i})">Add to Cart</button>`;
      productList.appendChild(card);
    });

    // Add to cart
    window.addToCart = function(i){
      const existing = cart.find(item=>item.index===i);
      if(existing){
        existing.qty +=1;
      } else {
        cart.push({index:i, ...products[i], qty:1});
      }
      renderCart();
    }

    function updateQty(i, value){
      if(value < 1) value = 1;
      cart[i].qty = parseInt(value);
      renderCart();
    }

    function removeFromCart(i){
      cart.splice(i,1);
      renderCart();
    }

    function renderCart(){
      cartItems.innerHTML = "";
      let total = 0;
      cart.forEach((item, idx)=>{
        const div = document.createElement('div');
        div.className="cart-item";
        div.innerHTML = `
          ${item.name} - ₹${item.price} x 
          <input type="number" class="qty-input" value="${item.qty}" min="1" onchange="updateQty(${idx}, this.value)"> 
          = ₹${item.price*item.qty} 
          <button class="remove-btn" onclick="removeFromCart(${idx})">Remove</button>`;
        cartItems.appendChild(div);
        total += item.price*item.qty;
      });
      cartTotal.textContent = total > 0 ? `Total: ₹${total}` : "";
      placeOrderBtn.classList.toggle("hidden", cart.length===0);
    }

    // Open/Close product modal
    document.getElementById('viewProductsBtn').onclick = ()=> document.getElementById('productModal').style.display="flex";
    document.getElementById('closeModal').onclick = ()=> document.getElementById('productModal').style.display="none";

    // Place order modal
    placeOrderBtn.onclick = ()=>{
      document.getElementById('orderModal').style.display="flex";
    }
    document.getElementById('closeOrderModal').onclick = ()=> document.getElementById('orderModal').style.display="none";

    // Submit order
    document.getElementById('orderForm').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('orderName').value;
      const phone = document.getElementById('orderPhone').value;
      const address = document.getElementById('orderAddress').value;
      const pin = document.getElementById('orderPin').value;
      const total = cart.reduce((sum,i)=>sum + i.price*i.qty,0);
      document.getElementById('orderMsg').textContent = 
        `Shukriya ${name}! Aapka order place ho gaya. Total ₹${total}`;
      this.reset();
      cart = [];
      renderCart();
    });
  </script>
