  <!-- Order Form Modal -->
  <div class="modal" id="orderModal">
    <div class="modal-content">
      <span class="close" id="closeOrderModal">&times;</span>
      <h2>Place Order</h2>
      <form id="orderForm">
        <input type="text" id="orderName" placeholder="Name" required />
        <input type="tel" id="orderPhone" placeholder="Mobile Number" required />
        <input type="text" id="orderAddress" placeholder="Address" required />
        <input type="number" id="orderPin" placeholder="Pin Code" required />
        <button type="submit" class="cta">Submit Order</button>
      </form>
      <p id="orderMsg" style="margin-top:10px; color:green; font-weight:600"></p>
    </div>
